{% trans_default_domain 'FOSUserBundle' %}

 <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
           <section class="login_content" style="text-align: center;">
              {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                <br/>
              {% endif %}
              <form action="{{ path("fos_user_security_check") }}" method="POST">
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                  <br>
                  <h1>
                      <i class="fa fa-paper-plane-o"></i>
                      Mobilize
                  </h1>
                  <br>

                  <p>Use <b>admin@dev.local</b> for the username and password to sign in.</p>

              <br>

              <div style="margin-bottom: 20px;">
                <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" id="username" name="_username" value="{{ last_username }}" required="required" />
              </div>
              <div style="margin-bottom: 20px;">
                <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password" required="required" />
              </div>              
              <div>
                <input class="btn btn-success submit btn-lg" type="submit" style="margin-left: 0; float:none;" id="_submit" name="_submit" value="Sign In" />
              </div>

            </form>
          </section>
        </div>

      </div>
    </div>
