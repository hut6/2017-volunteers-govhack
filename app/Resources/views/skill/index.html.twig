{% extends ":skill:_layout.html.twig" %}

{% block page_button %}
    <a class="btn btn-success" href="{{ path('skill_new') }}">Add skill</a>
{% endblock %}

{% block page_content %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.name }}</td>
                <td>
                            <a class="btn btn-success btn-xs" href="{{ path('skill_edit', { 'id': skill.id }) }}">
                                <i class="fa fa-pencil"></i>
                                Edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
