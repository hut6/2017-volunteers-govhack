{% extends "app/base.html.twig" %}

{% block page_content %}

    <h1>Skills list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td><a href="{{ path('skill_show', { 'id': skill.id }) }}">{{ skill.id }}</a></td>
                <td>{% if skill.created %}{{ skill.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ skill.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('skill_show', { 'id': skill.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('skill_edit', { 'id': skill.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skill_new') }}">Create a new skill</a>
        </li>
    </ul>
{% endblock %}
