{% extends ":emergencytype:_layout.html.twig" %}

{% block page_content %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emergencyType in emergencyTypes %}
            <tr>
                <td>{{ emergencyType.name }}</td>
                <td>
                    <a class="btn btn-success btn-xs" href="{{ path('emergencytype_edit', { 'id': emergencyType.id }) }}">
                        <i class="fa fa-pencil"></i>
                        edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('emergencytype_new') }}">Add Type</a>

{% endblock %}
