{% extends ":emergency:_layout.html.twig" %}

{% block page_content %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for emergency in emergencies %}
            <tr>
                <td>{% if emergency.created %}{{ emergency.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ emergency.description }}</td>
                <td>
                    <a class="btn btn-primary btn-sm"
                       href="{{ path('emergency_edit', { 'id': emergency.id }) }}">View Volunteers</a>
                    <a class="btn btn-success btn-sm"
                       href="{{ path('emergency_edit', { 'id': emergency.id }) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
