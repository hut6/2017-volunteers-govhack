{% extends ":emergency:_layout.html.twig" %}

{% block page_content %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emergency in emergencies %}
            <tr>
                <td>{% if emergency.created %}{{ emergency.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ emergency.description }}</td>
                <td>
                            <a class="btn btn-success" href="{{ path('emergency_edit', { 'id': emergency.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
